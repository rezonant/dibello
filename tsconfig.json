{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./dist",
        "lib": [
            "dom",
            "es2015",
            "es2015.iterable",
            "esnext.asynciterable"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true
    },
    "exclude": [ "./karma.conf.ts" ],
    "include": [
        "./src/**/*.ts"
    ]
}